<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="Cab9.EditText" parent="android:Widget.EditText">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:background">@drawable/theme_selector_edit_text</item>
		<item name="android:textColor">#000000</item>
		<item name="android:layout_marginBottom">@dimen/input_vertical_spacing</item>
		<item name="android:paddingTop">@dimen/input_vertical_padding</item>
		<item name="android:paddingBottom">@dimen/input_vertical_padding</item>
	</style>

	<style name="Cab9.Button" parent="android:Widget.Button">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:background">@color/theme_background_dark</item>
		<item name="android:layout_marginBottom">@dimen/input_vertical_spacing</item>
		<item name="android:textColor">@android:color/white</item>
		<item name="android:textStyle">bold</item>
		<item name="android:gravity">center</item>
		<item name="android:paddingTop">@dimen/button_vertical_padding</item>
		<item name="android:paddingBottom">@dimen/button_vertical_padding</item>
		<item name="android:paddingLeft">@dimen/button_horizontal_padding</item>
		<item name="android:paddingRight">@dimen/button_horizontal_padding</item>
	</style>

	<style name="Cab9.Button.Green" parent="Cab9.Button">
		<item name="android:background">@drawable/theme_selector_button_green</item>
	</style>

	<style name="Cab9.Button.Red" parent="Cab9.Button">
		<item name="android:background">@drawable/theme_selector_button_red</item>
	</style>

	<style name="Cab9.Button.Dark" parent="Cab9.Button">
		<item name="android:background">@color/theme_background_dark</item>
	</style>

	<style name="Cab9.Button.Orange" parent="Cab9.Button">
		<item name="android:background">@drawable/theme_selector_button_orange</item>
	</style>

	<style name="Cab9.KeyValueStrip" parent="">
		<item name="android:orientation">horizontal</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:paddingLeft">@dimen/row_horizontal_padding</item>
		<item name="android:paddingRight">@dimen/row_horizontal_padding</item>
		<item name="android:paddingTop">@dimen/row_vertical_padding</item>
		<item name="android:paddingBottom">@dimen/row_vertical_padding</item>
		<item name="android:layout_marginBottom">@dimen/row_margin_bottom</item>
		<item name="android:background">@color/theme_background_dark</item>
		<item name="android:clickable">false</item>
	</style>
</resources>