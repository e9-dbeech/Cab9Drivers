<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/theme_background_dark"
              android:paddingLeft="@dimen/list_item_horizontal_padding"
              android:paddingRight="@dimen/list_item_horizontal_padding"
              android:paddingTop="@dimen/list_item_vertical_padding"
              android:padding="@dimen/list_item_vertical_padding">

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:id="@+id/shift_list_item_title"
		android:text="00 / 00 / 0000"
		android:textColor="@color/theme_green"
		android:layout_alignParentTop="true"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:clickable="false"
		android:focusable="false"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceSmall"
		android:text="12 Miles"
		android:id="@+id/shift_list_item_subtitle"
		android:textColor="@color/theme_orange"
		android:phoneNumber="false"
		android:layout_alignBottom="@+id/shift_list_item_dial"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:clickable="false"
		android:focusable="false"/>
	<TextView
		android:layout_width="50dp"
		android:layout_height="50dp"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:text="00"
		android:id="@+id/shift_list_item_dial"
		android:textColor="@color/theme_background_dark"
		android:background="@drawable/theme_dial_green"
		android:gravity="center"
		android:textStyle="bold"
		android:tag="@string/font_helvetica"
		android:layout_alignParentTop="true"
		android:layout_alignParentRight="true"
		android:layout_alignParentEnd="true"
		android:clickable="false"
		android:focusable="false"
		android:autoText="true"/>

