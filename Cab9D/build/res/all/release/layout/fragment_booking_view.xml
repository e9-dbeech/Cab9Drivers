<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/theme_background">
	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceSmall"
		android:text="@string/bookings_section_header"
		android:id="@+id/shift_list_header"
		android:textColor="@android:color/white"
		android:tag="@string/font_helvetica"
		android:background="@color/theme_green"
		android:paddingLeft="@dimen/fragment_header_horizontal_padding"
		android:paddingRight="@dimen/fragment_header_horizontal_padding"
		android:paddingTop="@dimen/fragment_header_vertical_padding"
		android:paddingBottom="@dimen/fragment_header_vertical_padding"
		android:gravity="center"/>

	<view
		xmlns:map="http://schemas.android.com/apk/res-auto"
		android:id="@+id/booking_map_map"
		class="com.google.android.gms.maps.MapView"
		android:layout_width="match_parent"
		android:layout_height="160dp"
		map:uiZoomControls="false"/>

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:id="@+id/scrollView"
		android:fillViewport="false">
		<LinearLayout
			android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingLeft="@dimen/row_horizontal_padding"
		android:paddingRight="@dimen/row_horizontal_padding"
		android:paddingTop="@dimen/row_vertical_padding"
		android:paddingBottom="@dimen/row_vertical_padding"
		android:background="@drawable/section_top_border_red">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:text="#12345"
			android:id="@+id/bookings_text_id"
			android:layout_alignParentTop="true"
			android:layout_alignParentLeft="true"
			android:layout_alignParentStart="true"
			android:textColor="@color/theme_green"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:text="00/00/0000 00:00"
			android:id="@+id/bookings_text_time"
			android:layout_alignParentTop="true"
			android:layout_alignParentRight="true"
			android:layout_alignParentEnd="true"
			android:textColor="@android:color/white"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:text="From"
			android:id="@+id/bookings_label_from"
			android:layout_below="@+id/bookings_text_id"
			android:layout_alignParentLeft="true"
			android:layout_alignParentStart="true"
			android:textColor="@android:color/white"
			android:layout_marginTop="5dp"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:text="From"
			android:id="@+id/bookings_text_from"
			android:layout_below="@+id/bookings_label_from"
			android:layout_alignParentLeft="true"
			android:layout_alignParentStart="true"
			android:textColor="@color/theme_orange"
			/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:text="To"
			android:id="@+id/bookings_label_to"
			android:layout_below="@+id/bookings_text_from"
			android:layout_alignParentLeft="true"
			android:layout_alignParentStart="true"
			android:textColor="@android:color/white"
			android:layout_marginTop="5dp"
			/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:text="To"
			android:id="@+id/bookings_text_to"
			android:layout_below="@+id/bookings_label_to"
			android:layout_alignParentLeft="true"
			android:layout_alignParentStart="true"
			android:textColor="@color/theme_orange"/>
	</RelativeLayout>


		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:text="Booking Details"
			android:id="@+id/textView7"
			android:paddingLeft="@dimen/row_horizontal_padding"
			android:textColor="@android:color/white"
			android:paddingBottom="3dp"
			android:paddingTop="3dp"
			android:background="@android:color/darker_gray"
			android:textStyle="bold"/>
		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			style="@style/Cab9.KeyValueStrip"
			android:layout_marginBottom="@dimen/row_margin_bottom">
			<TextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:text="Name"
				android:layout_weight="1"
				android:layout_marginRight="16dp"
				android:textColor="@color/theme_green"
				android:textStyle="bold"
				android:tag="@string/font_helvetica"
				android:gravity="right"/>
			<TextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:id="@+id/bookings_text_passenger"
				android:layout_weight="3"
				android:textColor="@android:color/white"
				android:tag="@string/font_helvetica"/>
		</LinearLayout>
		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			style="@style/Cab9.KeyValueStrip"
			android:layout_marginBottom="@dimen/row_margin_bottom">
			<TextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:text="Fare"
				android:layout_weight="1"
				android:layout_marginRight="16dp"
				android:textColor="@color/theme_green"
				android:textStyle="bold"
				android:tag="@string/font_helvetica"
				android:gravity="right"/>
			<TextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:id="@+id/bookings_text_fare"
				android:layout_weight="3"
				android:textColor="@android:color/white"
				android:tag="@string/font_helvetica"/>
		</LinearLayout>
		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			style="@style/Cab9.KeyValueStrip"
			android:layout_marginBottom="@dimen/row_margin_bottom">
			<TextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:text="Vehicle"
				android:layout_weight="1"
				android:layout_marginRight="16dp"
				android:textColor="@color/theme_green"
				android:textStyle="bold"
				android:tag="@string/font_helvetica"
				android:gravity="right"/>
			<TextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:id="@+id/bookings_text_vehicle"
				android:layout_weight="3"
				android:textColor="@android:color/white"
				android:tag="@string/font_helvetica"/>
		</LinearLayout>
		</LinearLayout>
	</ScrollView>

</LinearLayout><!-- From: file:/C:/Users/David/Desktop/Final/Cab9Drivers/Cab9D/src/main/res/layout/fragment_booking_view.xml -->