<?xml version="1.0" encoding="utf-8"?>
<merge
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	tools:context="com.e9ine.cab9.drivers.LoginActivity">
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	              android:orientation="vertical"
	              android:layout_width="match_parent"
	              android:layout_height="match_parent"
	              android:background="@drawable/background_login">
		<TextView
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			android:id="@+id/login_text_title"
			android:text="@string/login_title"
			android:gravity="center"
			android:textSize="32sp"
			android:textColor="@android:color/white"/>

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:paddingLeft="@dimen/strip_horizontal_padding"
			android:paddingTop="@dimen/strip_vertical_padding"
			android:paddingRight="@dimen/strip_horizontal_padding"
			android:paddingBottom="@dimen/strip_vertical_padding"
			android:background="@color/theme_white_transparent"
			android:clipToPadding="false">

			<EditText
				android:inputType="textEmailAddress"
				android:id="@+id/login_text_email"
				android:hint="@string/login_email_hint"
				style="@style/Cab9.EditText"
				android:layout_margin="5dp"/>

			<EditText
				android:inputType="textPassword"
				style="@style/Cab9.EditText"
				android:id="@+id/login_text_password"
				android:hint="@string/login_password_hint"
				android:layout_margin="5dp"/>

			<Button
				android:text="@string/login_login_button"
				android:id="@+id/login_button_login"
			    style="@style/Cab9.Button.Green"
			    android:layout_marginBottom="0dp"/>
		</LinearLayout>

		<TextView
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:id="@+id/login_text_feedback"
			android:layout_weight="2"
			android:gravity="center"
			android:textColor="@android:color/white"/>
	</LinearLayout>
	<include layout="@layout/include_spinner"/>
</merge><!-- From: file:/C:/Users/David/Desktop/Final/Cab9Drivers/Cab9D/src/main/res/layout/activity_login.xml -->