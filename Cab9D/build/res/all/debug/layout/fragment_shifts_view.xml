<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/theme_background">

	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:paddingLeft="@dimen/section_horizontal_padding"
		android:paddingTop="@dimen/section_vertical_padding"
		android:paddingRight="@dimen/section_horizontal_padding"
		android:paddingBottom="@dimen/section_vertical_padding"
		android:background="@color/theme_orange"
		android:layout_marginTop="8dp"
		android:id="@+id/shifts_info_box">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:text="@string/shifts_text_currentshift"
			android:id="@+id/textView"
			android:textColor="@android:color/white"
			android:tag="@string/font_helvetica"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:text="00/00/0000"
			android:id="@+id/shifts_text_date"
			android:layout_alignParentTop="true"
			android:layout_alignParentRight="true"
			android:layout_alignParentEnd="true"
			android:textColor="@android:color/white"
			android:tag="@string/font_helvetica"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:text="StartTime"
			android:id="@+id/shifts_text_start"
			android:layout_below="@+id/shifts_text_date"
			android:layout_centerHorizontal="true"
			android:textColor="@android:color/white"
			android:tag="@string/font_helvetica"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:text="00:00:00"
			android:id="@+id/shifts_text_length"
			android:layout_below="@+id/shifts_text_start"
			android:layout_centerHorizontal="true"
			android:layout_alignParentEnd="false"
			android:textSize="50sp"
			android:textIsSelectable="false"
			android:textColor="@android:color/white"
			android:tag="@string/font_helvetica"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:text="Vehicle"
			android:id="@+id/shifts_text_vehicle"
			android:textColor="@android:color/white"
			android:layout_below="@+id/shifts_text_length"
			android:layout_centerHorizontal="true"
			android:tag="@string/font_helvetica"
			android:visibility="gone"/>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_below="@+id/shifts_text_vehicle"
			android:layout_alignLeft="@+id/textView"
			android:layout_alignStart="@+id/textView"
			android:id="@+id/linearLayout"
			android:layout_marginTop="6dp">
			<View
				android:layout_width="0dp"
				android:layout_height="1dp"
				android:layout_weight="1"/>
			<TextView
				android:layout_width="50dp"
				android:layout_height="50dp"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:text="00"
				android:id="@+id/shifts_dial_bookings"
				android:textColor="@color/theme_orange"
				android:background="@drawable/theme_dial_white"
				android:gravity="center"
				android:textStyle="bold"
				android:tag="@string/font_helvetica"/>
			<View
				android:layout_width="0dp"
				android:layout_height="1dp"
			    android:layout_weight="2"/>
			<TextView
				android:layout_width="50dp"
				android:layout_height="50dp"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:text="00"
				android:id="@+id/shifts_dial_accepted"
				android:textColor="@color/theme_orange"
				android:gravity="center"
				android:background="@drawable/theme_dial_white"
				android:textStyle="bold"
				android:tag="@string/font_helvetica"/>
			<View
				android:layout_width="0dp"
				android:layout_height="1dp"
				android:layout_weight="2"/>
			<TextView
				android:layout_width="50dp"
				android:layout_height="50dp"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:text="00"
				android:id="@+id/shifts_dial_missed"
				android:textColor="@color/theme_orange"
				android:gravity="center"
				android:background="@drawable/theme_dial_white"
				android:textStyle="bold"
				android:tag="@string/font_helvetica"/>
			<View
				android:layout_width="0dp"
				android:layout_height="1dp"
				android:layout_weight="2"/>
			<TextView
				android:layout_width="50dp"
				android:layout_height="50dp"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:text="00"
				android:id="@+id/shifts_dial_rejected"
				android:textColor="@color/theme_orange"
				android:gravity="center"
				android:background="@drawable/theme_dial_white"
				android:textStyle="bold"
				android:tag="@string/font_helvetica"/>
			<View
				android:layout_width="0dp"
				android:layout_height="1dp"
				android:layout_weight="1"/>
		</LinearLayout>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_below="@+id/linearLayout"
			android:layout_centerHorizontal="true">

			<TextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:text="@string/shifts_label_bookings"
				android:layout_weight="1"
				android:gravity="center_horizontal"
				android:textColor="@android:color/white"
				android:textSize="12sp"
				android:tag="@string/font_helvetica"/>

			<TextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:text="@string/shifts_label_accepted"
				android:layout_weight="1"
				android:gravity="center_horizontal"
				android:textColor="@android:color/white"
				android:textSize="12sp"
				android:tag="@string/font_helvetica"/>

			<TextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:text="@string/shifts_label_missed"
				android:layout_weight="1"
				android:gravity="center_horizontal"
				android:textColor="@android:color/white"
				android:textSize="12sp"
				android:tag="@string/font_helvetica"/>

			<TextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:text="@string/shifts_label_rejected"
				android:layout_weight="1"
				android:gravity="center_horizontal"
				android:textColor="@android:color/white"
				android:textSize="12sp"
				android:tag="@string/font_helvetica"/>
		</LinearLayout>

	</RelativeLayout>

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:id="@+id/scrollView"
		android:layout_weight="1"
		android:padding="@dimen/controls_box_padding">


		<LinearLayout
			android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent">

			<Button
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:text="@string/shifts_button_changedetails"
				android:id="@+id/shifts_button_details"
				style="@style/Cab9.Button.Dark"
				android:tag="@string/font_helvetica"/>
			<Button
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:text="@string/shifts_button_viewbookings"
				android:id="@+id/shifts_button_viewbookings"
				style="@style/Cab9.Button.Green"
				android:tag="@string/font_helvetica"/>
			<Button
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:text="@string/shifts_button_fetchprevious"
				android:id="@+id/shifts_button_previous"
				style="@style/Cab9.Button.Green"
				android:tag="@string/font_helvetica"/>

			<Button
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:text="@string/shifts_button_endshift"
				android:id="@+id/shifts_button_endshift"
				style="@style/Cab9.Button.Red"
				android:tag="@string/font_helvetica"/>
		</LinearLayout>
	</ScrollView>

</LinearLayout><!-- From: file:/C:/Users/David/Documents/GitHub/Cab9Drivers/Cab9D/src/main/res/layout/fragment_shifts_view.xml -->